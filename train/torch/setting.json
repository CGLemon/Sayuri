{
    "NeuralNetwork" : {
        "NNType": "Residual",
        "MaxBoardSize": 19,
        "ResidualChannels": 64,
        "PolicyExtract": 16,
        "ValueExtract": 16,

        "Stack" : [
            "ResidualBlock",
            "ResidualBlock-SE"
        ]
    },

    "Train" : {
        "UseGPU": null,
        "Optimizer": "SGD",
        "StepsPerEpoch" : 1000,
        "ValidationSteps": 100,
        "VerboseSteps" : 1000,
        "MaxStepsPerRunning": 2048000,
        "Workers": 4,
        "BatchSize": 256,
        "BufferSize" : 524288,
        "DownSampleRate": 16,
        "MacroFactor": 1,
        "WeightDecay": 1e-4,
        "SoftLossWeight" : 0.1,
        "SwaMaxCount" : 16,
        "SwaSteps" : 100,

        "LearningRateSchedule": [
            [0,       1e-2],
            [128000,  3e-3],
            [256000,  1e-3],
            [384000,  3e-4],
            [512000,  1e-4],
            [768000,  3e-5],
            [1024000, 1e-5]
         ],

        "FixUpBatchNorm": false,
        "ValidationDirectory": "validate-dir",
        "TrainDirectory": "train-dir",
        "StorePath" : "workspace"
    }
}
