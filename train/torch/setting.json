{
    "NeuralNetwork" : {
        "NNType": "Residual",
        "MaxBoardSize": 19,
        "InputChannels": 38,
        "ResidualChannels": 64,
        "PolicyExtract": 24,
        "ValueExtract": 24,
        "ValueMisc": 5,

        "Stack" : [
            "ResidualBlock",
            "ResidualBlock-SE"
        ]
    },

    "Train" : {
        "UseGPU": null,
        "Optimizer": "SGD",
        "StepsPerEpoch" : 1000,
        "MaxStepsPerRunning": 2048000,
        "Workers": 4,
        "BatchSize": 256,
        "BufferSize" : 16384,
        "MacroFactor": 1,

        "LearningRateSchedule": [
            [0,       1e-2],
            [128000,  3e-3],
            [256000,  1e-3],
            [384000,  3e-4],
            [512000,  1e-4],
            [768000,  3e-5],
            [1024000, 1e-5]
         ],

        "WeightDecay": 1e-4,
        "FixUpBatchNorm": false,
        "TrainDirectory": "train-dir",
        "StorePath" : "workspace"
    }
}
