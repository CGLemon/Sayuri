{
    "NeuralNetwork" : {
        "NNType": "Residual",
        "MaxBoardSize": 19,
        "ResidualChannels": 128,
        "PolicyExtract": 24,
        "ValueExtract": 24,

        "Stack" : [
            "ResidualBlock",
            "ResidualBlock",
            "ResidualBlock-SE",
            "ResidualBlock",
            "ResidualBlock",
            "ResidualBlock-SE"
        ]
    },

    "Train" : {
        "UseGPU": null,
        "Optimizer": "SGD",
        "StepsPerEpoch" : 4000,
        "ValidationSteps": 100,
        "VerboseSteps" : 1000,
        "MaxStepsPerRunning": 4000,
        "Workers": 4,
        "BatchSize": 256,
        "BufferSize" : 524288,
        "DownSampleRate": 16,
        "MacroFactor": 1,
        "WeightDecay": 1e-4,
        "NumberChunks" : 20000,

        "LearningRateSchedule": [
            [0,       5e-3]
         ],

        "FixUpBatchNorm": false,
        "TrainDirectory": "selfplay/data",
        "StorePath" : "workspace"
    }
}
